{
  "name": "golemio-output-gateway",
  "version": "0.0.2",
  "description": "Output gateway for Golemio data platform",
  "main": "index.js",
  "scripts": {
    "start": "node -r dotenv/config dist/Index.js",
    "debug": "node --inspect-brk=9230 -r dotenv/config dist/Index.js",
    "build": "tsc",
    "build-watch": "tsc --watch --preserveWatchOutput",
    "test": "mocha -b --check-leaks --timeout 60000 -r ts-node/register -r dotenv/config --recursive test/helpers/*.test.ts test/**/*.test.ts test/*.test.ts --exit",
    "code-coverage": "nyc mocha -b --check-leaks --timeout 60000 -r ts-node/register -r source-map-support/register -r dotenv/config --recursive test/helpers/*.test.ts test/**/*.test.ts test/*.test.ts --exit",
    "generate-docs": "npx typedoc --readme \"./README.MD\" --name \"Golemio Output Gateway\" --mode file --out docs/typedoc src",
    "dredd": "dredd",
    "tslint": "tslint -p ."
  },
  "author": "Operator ICT, a.s.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.oict.cz/data-platform/output-gateway"
  },
  "dependencies": {
    "apicache": "^1.4.0",
    "debug": "^4.1.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "golemio-schema-definitions": "0.1.9",
    "moment": "^2.24.0",
    "mongoose": "^5.3.4",
    "morgan": "^1.9.1",
    "pg": "^7.7.1",
    "redis": "^2.8.0",
    "sequelize": "4.41.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/apicache": "^1.2.0",
    "@types/chai": "^4.1.7",
    "@types/debug": "^4.1.0",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/mongodb": "^3.1.12",
    "@types/mongoose": "^5.2.19",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.7",
    "@types/redis": "^2.8.13",
    "@types/sequelize": "4.27.32",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dredd": "^11.2.9",
    "husky": "^3.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sequelize-mocking": "^1.4.1",
    "sinon": "^7.2.3",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.1.3"
  },
  "nyc": {
    "check-coverage": true,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist",
      "**/*.test.ts",
      "docs"
    ],
    "all": true,
    "lines": 0,
    "statements": 0,
    "functions": 0,
    "branches": 0
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tslint"
    }
  }
}
